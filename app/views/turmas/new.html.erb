<div class="card">
  <div class="card-header">
    <h3>Criar Turma</h3>
  </div>
  <%= form_for @turma do |f| %>
    <div class="card-body">
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :codigo %>
          <%= f.text_field :codigo, class: 'form-control', required: true %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :periodo %>
          <%= f.text_field :periodo, class: 'form-control', required: true %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :disciplina_id, 'Disciplina' %>
          <%= f.select :disciplina_id, disciplinas_para_select,
                       { include_blank: 'Selecione a disciplina' },
                       required: true, class: 'form-control' %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :professor_id, 'Professor' %>
          <%= f.select :professor_id, professores_para_select,
                       { include_blank: 'Selecione o professor' },
                       required: true, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= f.submit 'Criar', class: 'btn btn-success' %>
      <%= link_to 'Voltar', :back, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>