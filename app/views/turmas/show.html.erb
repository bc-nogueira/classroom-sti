<div class="card">
  <div class="card-header">
    <h3><%= "#{@turma.disciplina.nome} - #{@turma.codigo}" %></h3>
  </div>
  <div class="card-body">
    <%= render partial: 'turmas/info', locals: { turma: @turma } %>
    <% if @turma.alunos.any? %>
      <h4 class="text-center mt-3">Alunos</h4>
      <div id="alunosTurma">
        <%= render partial: 'alunos/alunos', locals: { alunos: @turma.alunos } %>
      </div>
    <% else %>
      <p class="text-center mt-3">A turma n√£o tem alunos inscritos.</p>
    <% end %>

    <%= render 'turmas/inscricao_aluno' %>
  </div>
  <div class="card-footer text-muted">
    <%= link_to 'Voltar', :back, class: 'btn btn-secondary' %>
  </div>
</div>