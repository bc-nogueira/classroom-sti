<div class="card">
  <div class="card-header">
    <h3><%= @aluno.nome %></h3>
  </div>
  <div class="card-body">
    <div class="border rounded p-3">
      <h4 class="text-center">Informações</h4>
      <hr>
      <div class="d-flex justify-content-between ">
        <span><b>iduff:</b> <%= @aluno.iduff %></span>
        <span><b>Matrícula:</b> <%= @aluno.matricula %></span>
        <span><b>E-mail:</b> <%= @aluno.email %></span>
      </div>
    </div>
    <h4 class="text-center mt-3">Turmas</h4>
    <%= render partial: 'turmas/turmas', locals: { turmas: @aluno.turmas } %>
  </div>
  <div class="card-footer text-muted">
    <%= link_to 'Voltar', :back, class: 'btn btn-secondary' %>
  </div>
</div>