<div class="card">
  <div class="card-header">
    <h3><%= @aluno.nome %></h3>
  </div>
  <div class="card-body">
    <%= render partial: 'alunos/info', locals: { aluno: @aluno } %>
    <%= render partial: 'alunos/turmas_do_aluno', locals: { aluno: @aluno } %>
    <%= render 'alunos/inscricao_em_turma' %>
  </div>
  <div class="card-footer text-muted">
    <%= link_to 'Voltar', :back, class: 'btn btn-secondary' %>
  </div>
</div>