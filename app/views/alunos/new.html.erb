<div class="card">
  <div class="card-header">
    <h3>Criar Aluno</h3>
  </div>
  <%= form_for @aluno do |f| %>
    <div class="card-body">
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :nome %>
          <%= f.text_field :nome, class: 'form-control', required: true %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :iduff %>
          <%= f.text_field :iduff, class: 'form-control', required: true %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :matricula %>
          <%= f.text_field :matricula, class: 'form-control', required: true %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :email %>
          <%= f.text_field :email, class: 'form-control', required: true %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= f.submit 'Criar', class: 'btn btn-success' %>
      <%= link_to 'Voltar', :back, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>